<div class="edit-user">

  <h3>ユーザー編集</h3>

  <%# エラーメッセージ %>
  <div class="error-message">
    <%= render "shared/error", obj: @user %> 
  </div>

  <%= form_with model: @user do |f| %>
    <table>
      <tr>
        <th><%= f.label :name ,"名前" %></th>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <th><%= f.label :profile ,"自己紹介" %></th>
        <td><%= f.text_field :profile %></td>
      </tr>

      <tr>
        <th><%= f.label :email ,"メールアドレス" %></th>
        <td><%= f.text_field :email %></td>
      </tr>

      <tr>
        <th><%= f.label :password ,"パスワード" %></th>
        <td><%= f.text_field :password %></td>
      </tr>

      <tr>
        <th><%= f.label :icon ,"アイコン" %></th>
        <td><%= f.file_field :icon %></td>
        </tr>
    </table>

    <div>
      <ul>
        <li><%= f.submit "編集完了する"%></li>
        <li><%= link_to "お部屋一覧に戻る", :rooms %></li>
      </ul>
    </div>
  <% end %>
</div>  