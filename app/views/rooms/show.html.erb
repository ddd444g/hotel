<div class="show-room">
  <h3>お部屋詳細</h3>
  <table>
    <tr>
      <th>画像</th>
      <td><img src="<%= @room.img.thumb.url %>"></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= @room.name %></td>
    </tr>
    <tr>
      <th>紹介文</th>
      <td><%= @room.introduction %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @room.address %></td>
    </tr>
    <tr>
      <th>価格</th>
      <td><%= @room.price %></td>
    </tr>
  </table>


<h3>新規予約</h3>

<%= form_with model: @booking do |f| %>
  <table>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date  %></td>
    </tr>
    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
    <tr>
      <th><%= f.label :total_people, "人数" %></th>
      <td><%= f.text_field :total_people %></td>
    </tr>

  </table>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <div>
    <ul>
      <li><%= f.submit "予約を完了する"%></li>
    </ul>
  </div>
<% end %>

<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
  </ul>
</div>
 