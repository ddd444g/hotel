<div class="new-room">

  <div class="new-room">

    <h3>お部屋新規作成</h3>

    <%# エラーメッセージ %>
    <div class="error-message">
      <%= render "shared/error", obj: @room %> 
    </div> 

    <%= form_with model: @room do |f| %>
      <table>
        <tr>
          <th><%= f.label :name ,"名前" %></th>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <th><%= f.label :introduction ,"紹介文" %></th>
          <td><%= f.text_area :introduction %></td>
        </tr>

        <tr>
          <th><%= f.label :address ,"住所" %></th>
          <td><%= f.text_area :address %></td>
        </tr>

        <tr>
          <th><%= f.label :price ,"価格" %></th>
          <td><%= f.text_field :price %></td>
        </tr>

        <tr>
          <th><%= f.label :img ,"画像" %></th>
          <td><%= f.file_field :img %></td>
        </tr>
      </table>
        <%= f.hidden_field :user_id, value: @user.id %>
      <div>
        <ul>
          <li><%= f.submit "登録完了する"%></li>
          <li><%= link_to "お部屋一覧に戻る", :rooms %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>  